generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  userId    Int    @id @default(autoincrement())
  name  String  @db.VarChar(26)
  email String

  @@index([name])
}

model Post {
  postId     Int    @id @default(autoincrement())
  body   String @db.VarChar(255)
  likes  Int
  userId Int

  @@index([postId])
  @@index([userId])
}
